@page "/news"
@using WebArticles.Data;
@inherits LoadNewsBase


<h1>News about @city</h1>



@if (Articles == null)
{
    <progress class="progress is-large is-info" max="100">60%</progress>
}
else
{

    <div>
        <RadzenDataList WrapItems="true" AllowPaging="true" PageSize="2" Data="@Articles" TItem="Article">
            <Template Context="article">
                <RadzenCard Style="width:600px;">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-square is-128x128">
                                @if (article.UrlToImage != null)
                                {
                                    <img src="@article.UrlToImage" alt="Image">
                                }
                                else
                                {
                                    <img src="https://bulma.io/images/placeholders/128x128.png">
                                }
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    <strong>Author: @article.Author </strong> <br /> <strong>Title: @article.Title</strong>
                                    <br>
                                    @article.Description
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <button class="button is-info" @onclick="@(() => ShowDetail(article))">Details</button>
                                    
                                </div>
                            </nav>
                        </div>
                    </article>

                </RadzenCard>
            </Template>
        </RadzenDataList>


    </div>

}

